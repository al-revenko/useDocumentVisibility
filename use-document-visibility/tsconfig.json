{
  "CompilerOptions": {
    "target": "es6",
    "lib": ["esnext", "DOM"],
    "module": "ESNext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "composite": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "jsx": "react",
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
